{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        /* This is intentionally empty to prevent TS from auto-loading all @types packages */
        "types": ["node"],
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "incremental": true,
        "preserveWatchOutput": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "allowJs": true
    }
}
